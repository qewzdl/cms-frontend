QWidget {
    background-color: #2b2b2b;
    color: #e0e0e0;
    font-family: "Segoe UI", sans-serif;
    font-size: 14px;
}
QPushButton {
    background-color: $PRIMARY_COLOR;
    border: none;
    border-radius: 8px;
    color: #ffffff;
    padding: 6px;
}
QPushButton:hover {
    background-color: #2980b9;
}
QLineEdit, QTextEdit {
    background-color: #1e1e1e;
    border: 1px solid #444;
    border-radius: 8px;
    padding: 4px;
    color: #e0e0e0;
}
QListWidget {
    background-color: #252525;
    border: none;
}
QListWidget::item {
    padding: 10px;
    margin: 5px;
    border-radius: 8px;
}
QListWidget::item:selected {
    background-color: $PRIMARY_COLOR;
    color: #ffffff;
}
QListWidget::item:hover {
    background-color: #4db8ff;
}

QScrollBar:vertical, QScrollBar:horizontal {
    border: none;
    border-radius: 5px;
    padding: 0 3%;
}

QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background-color: $PRIMARY_COLOR;
    border-radius: 100px;
    min-height: 20px;
    min-width: 20px;
}

QScrollBar::handle:vertical:hover, QScrollBar::handle:horizontal:hover {
    background-color: #6d6d6d;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    background: none;
    border: none;
    width: 0px;
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical,
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

QLabel#dateLabel {
    background-color: rgba(0, 0, 0, 0.3);
    color: #fff;
    padding: 4px 8px;
    border-radius: 10px;
}

QWidget#messageBubble[messageType="incoming"] {
    background-color: rgba(0, 0, 0, 0.3);
    color: #fff;
    border-radius: 10px;
}

QWidget#messageBubble[messageType="outgoing"] {
    background-color: $PRIMARY_COLOR;
    color: #fff;
    border-radius: 10px;
}

QLabel#timeLabel {
    font-size: 10px;
    color: gray;
}

QLabel#messageLabel,
QLabel#timeLabel {
    background-color: transparent;
}

QWidget#messageBubble[messageType="outgoing"] QLabel#messageLabel,
QWidget#messageBubble[messageType="outgoing"] QLabel#timeLabel {
    color: #ffffff; 
}

QWidget#messageBubble[messageType="incoming"] QLabel#messageLabel,
QWidget#messageBubble[messageType="incoming"] QLabel#timeLabel {
    color: #ffffff; 
}

QListWidget#chatList {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
}

QWidget#topBar {
    background-color: $PRIMARY_COLOR;
    padding: 10px;
    border-radius: 8px;
}

QLabel#topBarTitle {
    color: #ffffff;
    background-color: transparent;
    font-size: 18px;
    font-weight: bold;
}